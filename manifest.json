{
    "manifest_version": 3,
    "name": "Care Break",
    "description": "Posture and water reminder to maintain healthy habits",
    "version": "1.0",

    "action": {
        "default_popup": "popup/popup.html"
    },

    "background": {
        "service_worker": "background.js"
    },

    "permissions": [
        "alarms",
        "notifications"
    ]
}