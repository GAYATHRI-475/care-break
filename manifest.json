{
    "manifest_version": 3,
    "name": "Care Break",
    "description": "Posture and water reminder to maintain healthy habits",
    "version": "1.0",

    "action": {
        "default_popup": "popup/popup.html"
    },

    "background": {
        "service_worker": "background.js"
    },

    "permissions": [
        "alarms",
        "notifications",
        "offscreen"
    ],

    "web_accessible_resources": [
        {
            "resources": [
                "offscreen.html",
                "audio/posture/*.mp3",
                "audio/water/*.mp3"
            ],
            "matches": [ "<all_urls>" ]
        }
    ]
}